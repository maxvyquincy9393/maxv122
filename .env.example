# ====================================
# MAXVY v3.1 - Environment Configuration
# ====================================
# Copy this file to .env and fill in your API keys

# ====================================
# REQUIRED API KEYS
# ====================================

# Gemini API Key (REQUIRED)
# Get it from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ====================================
# OPTIONAL API KEYS (for enhanced features)
# ====================================

# HuggingFace Token (for image generation, TTS, transcription)
# Get it from: https://huggingface.co/settings/tokens
HF_TOKEN=your_huggingface_token_here

# Groq API Key (fast AI responses)
# Get it from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# OpenRouter API Key (alternative AI provider)
# Get it from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenAI API Key (GPT models)
# Get it from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Cohere API Key (alternative AI)
# Get it from: https://dashboard.cohere.com/api-keys
COHERE_API_KEY=your_cohere_api_key_here

# Together API Key (open source models)
# Get it from: https://api.together.xyz/settings/api-keys
TOGETHER_API_KEY=your_together_api_key_here

# Mistral API Key
# Get it from: https://console.mistral.ai/api-keys
MISTRAL_API_KEY=your_mistral_api_key_here

# Banana.dev API Key (for advanced TTS)
# Get it from: https://app.banana.dev/api-keys
BANANA_API_KEY=your_banana_api_key_here

# ====================================
# REAL-TIME DATA APIS (optional)
# ====================================

# Weather API Key (OpenWeatherMap)
# Get it from: https://openweathermap.org/api
WEATHER_API_KEY=your_weather_api_key_here

# News API Key
# Get it from: https://newsapi.org/register
NEWS_API_KEY=your_news_api_key_here

# Exchange Rate API
# Get it from: https://app.exchangerate-api.com/sign-up
EXCHANGE_API_KEY=your_exchange_api_key_here

# ====================================
# BOT CONFIGURATION
# ====================================

# Bot command prefixes (comma-separated)
BOT_PREFIXES=.,!,/

# Bot activation command (for private chats)
ACTIVATION_COMMAND=maxactivate
DEACTIVATION_COMMAND=maxdeactivate

# Auto-activation settings
AUTO_ACTIVATE_GROUPS=true
AUTO_ACTIVATE_PRIVATE=false

# ====================================
# MODEL CONFIGURATION
# ====================================

# Gemini Model (options: gemini-1.5-flash, gemini-1.5-pro)
GEMINI_MODEL=gemini-1.5-flash

# HuggingFace Image Model
HF_IMAGE_MODEL=black-forest-labs/FLUX.1-schnell

# ====================================
# SYSTEM CONFIGURATION
# ====================================

# Logging level (debug, info, warn, error)
LOG_LEVEL=info

# Node environment (development, production)
NODE_ENV=production

# Debug mode
DEBUG=false

# ====================================
# RATE LIMITING
# ====================================

# Messages per minute per user
RATE_LIMIT_MESSAGES=20

# Image generations per hour per user
RATE_LIMIT_IMAGES=10

# ====================================
# FILE LIMITS
# ====================================

# Maximum file sizes (in MB)
MAX_PDF_SIZE=10
MAX_IMAGE_SIZE=5
MAX_AUDIO_SIZE=10
MAX_VIDEO_SIZE=20

# ====================================
# MEMORY & CONTEXT
# ====================================

# Maximum conversation history messages
MAX_HISTORY_MESSAGES=10

# Context expiry time (milliseconds)
CONTEXT_EXPIRY_MS=3600000

# ====================================
# WEBHOOK & DEPLOYMENT (optional)
# ====================================

# Webhook URL for notifications
WEBHOOK_URL=

# Server port (for web interface if implemented)
PORT=3000

# ====================================
# NOTES
# ====================================
# 1. Only GEMINI_API_KEY is required to run the bot
# 2. Other API keys enable additional features
# 3. Free tier API keys work for most features
# 4. Keep this file secure and never commit .env to git
# 5. Restart the bot after changing environment variables

# ====================================
# QUICK START
# ====================================
# 1. Copy this file: cp .env.example .env
# 2. Add your Gemini API key (minimum requirement)
# 3. Add other API keys for more features
# 4. Run: npm install
# 5. Run: npm start
# 6. Scan QR code with WhatsApp
